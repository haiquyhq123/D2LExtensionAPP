@using System.Dynamic
@model dynamic

@{
    ViewData["Title"] = "Home Page";
}

<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
      var calendarEl = document.getElementById('calendar-display');
      var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridWeek',
        height: 'auto', 
        headerToolbar: {
          left: 'prev,next today',
          center: 'title',
          right: 'dayGridWeek,dayGridMonth'
        },
        displayEventTime: true,
        eventTimeFormat: {
          hour: '2-digit',
          minute: '2-digit',
          hour12: false
        },

        events: [
            @foreach (var item in Model.LAssignment)
            {
                var data = item.Split('|');
                if (data.Length > 2)
                {
                    string rawDate = data[2];
                    DateTime dateObj;
                    // we need to parse because, the format datetime in sql server not match with js date time format
                    if (DateTime.TryParse(rawDate, out dateObj))
                    {
                        <text>{title: '@data[1]', start: '@dateObj.ToString("s")', color: '@(data.Length > 4 && data[4] == "High" ? "#dc3545" : "#3788d8")'},</text>
                    }
                }
            }
        ]
      });

      calendar.render();
    });
</script>

<style>
     /* Overwrite style of calendar style, i want it can word-wrap*/
    .fc-event-title {
        overflow-wrap: break-word; 
    }

    /* Make the event box allow height expansion */
    .fc-daygrid-event {
        white-space: normal !important;
        align-items: flex-start; 
    }
    #calendar-display {
        margin-bottom: 20px;
        padding: 10px;
        background: white;
        border: 1px solid #ddd;
    }
</style>

<div id="calendar-display"></div>

<div class="row">

    <div class="col-md-3" id="assignment-display">
        <h3>The Stack</h3>
        <hr />
        @if (Model.LAssignment.Count == 0)
        {
            <div class="alert alert-success">No pending tasks!</div>
        }
        else
        {
            <ul class="list-group">
                @foreach (var item in Model.LAssignment)
                {
                    var data = item.Split('|');
                    if (data.Length > 6)
                    {
                        string title = data[1];
                        string dueDate = data[2];
                        string priority = data[4];
                        string course = data[6];

                        <li class="list-group-item">
                            <b>@title</b> <br />
                            <span class="text-muted" style="font-size:0.9em">Course: @course</span> <br />
                            <span style="font-size:0.9em">Priority: @priority</span> <br />
                            <span class="text-danger">Due: @dueDate</span>
                        </li>
                    }
                }
            </ul>
        }
    </div>

    <div class="col-md-9" id="course-display">
        <h3>My Courses</h3>
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-light">
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Desciption</th>
                    <th>Course Code</th>
                    <th>Semester</th>
                    <th>Professor</th>
                    <th>Created Date</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.LCourse)
                {
                    var itemColumn = item.Split('|');
                    if (itemColumn.Length > 0)
                    {
                        string idOfCourse = itemColumn[0];
                        string titleOfCourse = itemColumn.Length > 1 ? itemColumn[1] : "";
                        <tr>
                            @foreach (var col in itemColumn)
                            {
                                <td>
                                    <a asp-controller="CourseWeekOperations"
                                       asp-action="Index"
                                       asp-route-id="@idOfCourse"
                                       asp-route-title="@titleOfCourse">@col</a>
                                </td>
                            }
                            <td>
                                <form asp-action="UpdateCourse" asp-controller="Home" method="get" style="display:inline;">
                                    <input type="hidden" name="Id" value="@idOfCourse" />
                                    <button type="submit">Update</button>
                                </form>
                                <form asp-action="DeleteCourse" asp-controller="Home" method="post" style="display:inline;">
                                    <input type="hidden" name="Id" value="@idOfCourse" />
                                    <button type="submit">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        <button><a asp-controller="Home" asp-action="CreateCourse">Create</a></button>
    </div>
</div>